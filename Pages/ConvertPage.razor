@page "/konvertering"

<PageTitle>Konvertering - BlazorApp</PageTitle>

<h2 class="mb-4">Konvertering</h2>

@code {
    private decimal meters; // Meter
    private decimal feet; // Fot
    private decimal kmh; // Km/h
    private int mph; // Mph

    // Metod för att konvertera meter till fot
    private void ConvertMetersToFeet()
    {
        feet = Math.Round(meters * 3.28084M, 2); // Omvandling med avrundning till två decimaler
    }

    // Metod för att konvertera km/h till mph
    private void ConvertKmhToMph()
    {
        mph = (int)Math.Round(kmh * 0.621371M); // Omvandling med avrundning till heltal
    }
}

<div class="row">
    <!-- Sektion för Meter till Fot -->
    <div class="col-md-6">
        <h3 class="mb-3">Meter till fot</h3>
        <div class="form-group">
            <label for="meters" class="mb-2">Meter</label>
            <!-- Tvåvägsbindning för att uppdatera variabeln meters -->
            <input type="number" class="form-control" id="meters" @bind="meters" />
        </div>
        <!-- Knapp för att anropa metoden ConvertMetersToFeet -->
        <button class="btn btn-primary mt-4" @onclick="ConvertMetersToFeet">Konvertera</button>
        <p class="mt-3"><strong>Resultat:</strong> @feet Fot</p>
    </div>

    <!-- Sektion för Km/h till Mph -->
    <div class="col-md-6">
        <h3 class="mb-3">Km/h till mph</h3>
        <div class="form-group">
            <label for="kmh" class="mb-2">Km/h</label>
            <input type="number" class="form-control" id="kmh" @bind="kmh" />
        </div>
        <button class="btn btn-primary mt-4" @onclick="ConvertKmhToMph">Konvertera</button>
        <p class="mt-3"><strong>Resultat:</strong> @mph Miles/hour</p>
    </div>
</div>
